<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sensor Dashboard</title>

  <!-- Google Material Symbols -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined&display=swap"/>

  <!-- Styles -->
  <link rel="stylesheet" href="css/general.css" />
  <link rel="stylesheet" href="css/styles.css" />
</head>
<body>
  <!-- Header Navigation -->
  <header>
    <nav class="navbar">
      <div class="logo">Dash<span>board</span></div>
      <ul class="nav-menu">
        <li class="nav-item"><a href="#" class="nav-link">SLIDES</a></li>
        <li class="nav-item"><a href="#" class="nav-link">ABOUT</a></li>
      </ul>
      <span class="material-symbols-outlined hamburger">menu</span>

      <!-- Mobile Menu -->
      <div class="mobile-menu">
        <div class="mobile-nav">
          <div class="sensor-btn">Sensor A</div>
          <div class="sensor-btn">Sensor B</div>
          <div class="sensor-btn">Sensor C</div>
          <div class="sensor-btn">Sensor D</div>
          <div class="sensor-btn">Sensor E</div>
          <div class="mobile-nav-links">
            <a href="#" class="nav-link">SLIDES</a>
            <a href="#" class="nav-link">ABOUT</a>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <!-- Main Layout -->
  <div class="container">
    <!-- Sidebar Navigation -->
    <aside class="sensor-nav">
      <div class="sensor-btn">Sensor A</div>
      <div class="sensor-btn">Sensor B</div>
      <div class="sensor-btn">Sensor C</div>
      <div class="sensor-btn">Sensor D</div>
      <div class="sensor-btn">Sensor E</div>
    </aside>

    <!-- Main Content -->
    <main>
      <div class="main-contents">
        <!-- Sensor Title -->
        <div class="sensor-title title" id="sensor-title">Sensor A</div>

        <!-- Data Update Status -->
        <p id="update-status" class="status-container">
          <span class="spinner"></span>
          <span class="status-text">Waiting for data...</span>
        </p>

        <!-- Dynamic Variable Cards -->
        <section class="cards-section" id="sensor-cards">
          <!-- Cards inserted via JS -->
        </section>

        <!-- Charts -->
        <div class="title">CHART</div>
        <section class="chart-section" id="chartContainer">
          <canvas id="sensorChart"></canvas>
        </section>
      </div>
    </main>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="js/script.js"></script>
</body>
</html>
